---
apiVersion: v1
kind: Secret
metadata:
  name: aeneatoken
type: Opaque
data:
  token: {{ aenea_token }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: aeneabot
spec:
  selector:
    matchLabels:
      app: aeneabot
  template:
    metadata:
      labels:
        app: aeneabot
    spec:
      containers:
        - name: aeneabot
          image: elautoestopista/aeneabot:{{ aenea_version | default('latest', true) }}
          imagePullPolicy: Always
          securityContext:
            runAsUser: 1001
            runAsGroup: 1001
            fsGroup: 1001   
          env:
          - name: BOTNAME
            value: {{ aenea_botname }}
          - name: AUTHUSER
            value: {{ aenea_authuser }}
          - name: LANG
            value: {{ aenea_lang }}
          - name: LOGLEVEL
            value: {{ aenea_loglevel| default('INFO', true) }}
          - name: TOKEN
            valueFrom:
              secretKeyRef:
                name: aeneatoken
                key: token
